<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_pos_session_form" model="ir.ui.view">
        <field name="name">pos.session.form.view</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
        <field name="arch" type="xml">
            <button name="action_pos_session_closing_control"
                   position="after">
                <button name="action_pos_session_approve"
                        type="object"
                        string="Approve"
                        class="oe_highlight"
                        states="pending_approval"
                        groups="point_of_sale.group_pos_manager"
                />
            </button>
            <button name="%(point_of_sale.action_pos_box_in)d" position="after">
                <button name="%(action_cash_box_journal_in_pos)d"
                        type="action"
                        icon="fa-level-down"
                        class="oe_stat_button"
                        states="pending_approval"
                        groups="point_of_sale.group_pos_manager"
                >
                    <div class="o_from_field o_stat_info">
                        <span class="o_stat_text">Put</span>
                        <span class="o_stat_text">Money In</span>
                    </div>
                </button>
                <button name="%(action_cash_box_journal_in_pos)d"
                        type="action"
                        icon="fa-level-down"
                        class="oe_stat_button"
                        states="opened,closing_control"
                >
                    <div class="o_from_field o_stat_info">
                        <span class="o_stat_text">Put</span>
                        <span class="o_stat_text">Money In</span>
                    </div>
                </button>
                <button name="%(action_cash_box_journal_out_pos)d"
                        type="action"
                        icon="fa-level-up"
                        class="oe_stat_button"
                        states="opened,closing_control"
                >
                    <div class="o_from_field o_stat_info">
                        <span class="o_stat_text">Take</span>
                        <span class="o_stat_text">Money Out</span>
                    </div>
                </button>
                <button name="%(action_cash_box_journal_out_pos)d"
                        type="action"
                        icon="fa-level-up"
                        class="oe_stat_button"
                        states="pending_approval"
                        groups="point_of_sale.group_pos_manager"
                >
                    <div class="o_from_field o_stat_info">
                        <span class="o_stat_text">Take</span>
                        <span class="o_stat_text">Money Out</span>
                    </div>
                </button>
            </button>
        </field>
    </record>
    <record id="view_pos_session_search" model="ir.ui.view">
        <field name="name">pos.session.search.view</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_search"/>
        <field name="arch" type="xml">
            <filter domain="[('state', '=', 'opened')]" position="after">
                <filter string="Pending approval" domain="[('state', '=', 'pending_approval')]"/>
            </filter>
        </field>
    </record>
</odoo>
